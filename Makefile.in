#Compiler
CC = @CC@ 
CFLAGS = @CFLAGS@

#Output Directory
BINDIR = bin

#Source Directory
SRCDIR = src

#Library includes
CFLAGS += $$(pkg-config --cflags --libs gtk+-2.0)

SOURCES = $$(ls $(SRCDIR)/*)

all: $(BINDIR) $(BINDIR)/notekeeper

$(BINDIR):
	mkdir -p $(BINDIR)
	
$(BINDIR)/notekeeper: $(SRCDIR)
	$(CC) $(CFLAGS) $(SOURCES) -o $(BINDIR)/notekeeper

clean:
	rm -rf $(BINDIR)
	rm configure config.log config.status
	rm -rf autom4te.cache
	rm -f Makefile

.PHONY: all clean
